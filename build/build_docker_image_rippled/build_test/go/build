#!/bin/bash

self(){
  DIR=$( cd "$( dirname "$0" )/" && pwd)
  echo $DIR
}

echo "Stopping containers"
docker ps -a|grep xrpllabsofficial/xrpld|cut -d " " -f 1 |xargs -I___ docker stop ___

if [[ $(docker images -a|grep xrpllabsofficial/xrpld|wc -l) -gt "0" ]]; then
  echo "Removing image"
  docker rmi -f xrpllabsofficial/xrpld
fi

echo "Building image"
docker build --no-cache --tag xrpllabsofficial/xrpld $(self)/../.

echo "Done, you can now run $(self)/up"
